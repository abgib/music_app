<h1>Bands
  <%= button_to "Create Band", new_band_url, method: :get %>
</h1>

<table>
  <% @bands.each do |band| %>
    <tr>
      <td><a href="<%= band_url(band) %>"><%= band.name %></a></td>

      <td><%= button_to "Edit Band", edit_band_url(band.id), method: :get %></td>

      <td>
        <form action="<%= band_url(band) %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <%= button_to "Delete Band", band_url(band), method: :post %>
        </form>
      </td>

      <td>
        <form action="<%= new_album_url %>" method="get">
          <input type="hidden" name="album[band_id]" value="<%= band.id %>">
        <button>Add Album</button>
        </form>
      </td>

    </tr>
  <% end %>
</table>
