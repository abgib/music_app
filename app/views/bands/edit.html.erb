<h1>Edit Band</h1>

<form action="<%= band_url(@band) %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <input type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token  %>">

  <label for="band_name">Name:
    <input type="text"
      name="band[name]"
      id="band_name"
      value="<%= @band.name %>">
  </label><br><br>

  <button>Submit</button>

</form>
