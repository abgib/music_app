<h1>Create Band</h1>

<form action="bands_url" method="post">
  <input type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token  %>">

  <label for="band_name">Name:
    <input type="text"
      name="band[name]"
      id="band_name"
      value="<%= @band.name %>">
  </label><br><br>

  <button>Create Band</button>

</form>
