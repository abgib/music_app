<h1>Edit Album</h1>

  <form action="<%= album_url(@album) %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token  %>">

    <label for="album_band_id">Band
      <select name="album[band_id]" id="album_band_id">
        <option value=""></option>
        <% Band.all.each do |band| %>
          <option value="<%= band.id %>" <%= "selected" if band.id == @album.band_id %>>
            <%= band.name %></option>
        <% end %>
      </select>
    </label><br><br>

    <label for="album_style_type">Type
        <% Album::STYLE_TYPES.each do |type| %>
          <input type="radio" name="album[style_type]"
            id="album_style_type" value="<%= type %>">
          <label for="album_style_type"><%= type %></label>
        <% end %>
    </label><br><br>

    <label for="album_title">Title
      <input type="text"
        name="album[title]"
        id="album_title"
        value="<%= @album.title %>">
    </label><br><br>

    <button>Update Album</button>

  </form>
